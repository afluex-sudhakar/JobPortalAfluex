                {
                    var url = "/hi/AdvanceSearch?City=" + encodeURIComponent(city) + "&SearchTerm=" + encodeURIComponent(key);
                }
                else if (city != ""){
                    var url = "/hi/AdvanceSearch?City=" + encodeURIComponent(city);
                }
                else if (key != "")
                {
                    var url = "/hi/AdvanceSearch?SearchTerm=" + encodeURIComponent(key);
                }
                else
                {
                    url = "/hi/AdvanceSearch";
                }
                window.location.href = url;
            });
            $("#resume").click(function () {
                debugger;
                var UserId = $("#hdfSession").val();
                if (UserId == "") {
                    window.location.href = "/hi/Login";
                }
                else {
                    window.location.href = "/User/UserProfile";
                }
            });
            $("#btnsubmit").click(function () {
                debugger;
                if ($("#txtEmail").val() != '')
                {
                    $.ajax({
                        url: "/hi/SubscribeNewsLetter",
