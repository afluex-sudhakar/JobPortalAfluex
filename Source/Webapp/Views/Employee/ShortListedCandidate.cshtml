@model Data.DTOs.EmpJobPostDTO

@{
    ViewBag.Title = "ShortListedCandidate";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
@using (Html.BeginForm("ShortListedCandidate", "Employee", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data", @class = "needs-validation", @novalidate = "" }))

{<div class="loader"></div>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title m-b-0">Employee</h4>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="index.html">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Short Listed Candidate List</li>
                    </ul>
                    <div class="section-body">

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4>Short Listed Candidate List</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label>Title</label>
                                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Title !
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label>Job Type</label>
                                                    @Html.DropDownListFor(m => m.JobTypeId, new SelectList(ViewBag.JobType, "Id", "Name"), "--Select--", new { @class = "form-control" })
                                                </div>
                                                <div class="col-md-4">
                                                    <label>Job Role</label>
                                                    @Html.DropDownListFor(m => m.JobRoleId, new SelectList(ViewBag.JobRole, "Id", "Name"), "--Select--", new { @class = "form-control"})
                                                </div>

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label>From Date</label>
                                                    @*@Html.TextBoxFor(m => m.FromDate, new { @class = "form-control datepicker"})*@
                                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control",@type="date" })
                                                    <div class="invalid-feedback">
                                                        Please From Date !
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label>To Date</label>
                                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @type = "date" })
                                                    <div class="invalid-feedback">
                                                        Please Enter To  !
                                                    </div>
                                                </div>

                                                <div class="col-md-4">
                                                    @Html.AntiForgeryToken()
                                                    <button class="btn btn-primary mrse-1" style="margin-top: 29px" type="submit">Search</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-striped" id="table-1">
                                                <thead>
                                                    <tr>
                                                        <th class="text-center">
                                                            S.No.
                                                        </th>
                                                        <th>Name</th>
                                                        <th>Job Role</th>
                                                        <th>Job Title</th>
                                                        <th>Skills</th>
                                                        <th>Mobile No</th>
                                                        <th>Email</th>
                                                        <th>Address</th>
                                                        @*<th>Posted Date</th>*@
                                                        @*<th>Last Date</th>
                            <th>Short Description</th>
                            <th>Hindi Short Description</th>*@
                                                        @*<th>Action</th>*@
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model != null)
                                                    {
                                                        if (Model.lstCandidate != null)
                                                        {
                                                            int i = 1;
                                                            foreach (var Item in Model.lstCandidate)
                                                            {
                                                                var data = Item.userSkill.ToList();
                                                                if (data != null)
                                                                {
                                                                    <tr>
                                                                        <td>
                                                                            @i
                                                                        </td>
                                                                        <td>@Item.Name</td>
                                                                        <td>@Item.JobRole</td>
                                                                        <td>@Item.Title</td>
                                                                        <td>
                                                                            @if (data != null)
                                                                            {
                                                                                for (int j = 0; j < data.Count(); j++)
                                                                                {
                                                                                    <button type="button" data-skillid="" class="btn btn-primary">@data[j].Name</button>
                                                                                }
                                                                            }
                                                                        </td>
                                                                        <td>
                                                                            @Item.Mobile
                                                                        </td>
                                                                        <td>@Item.Email</td>
                                                                        <td>
                                                                            @Item.Address
                                                                        </td>
                                                                        @*<td><a href="#" class="btn btn-primary">Approve</a></td>*@
                                                                    </tr>
                                                                    i++;
                                                                }
                                                            }
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>
}
@section css {

}

@section script {
    <script type="text/javascript">
            $("#table-1").dataTable({
                dom: "Bfrtip",
                buttons: ["csv", "excel", "pdf", "print"],
      columnDefs: [{ sortable: false, targets: [2, 3] }],
  });</script>
}