<body class="loginBg">
    <div class="main_login">
        @using (Html.BeginForm("BtnForgotPassword", "Account", FormMethod.Post, new { @class = "needs-validation", @novalidate = "" }))
        {

            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-5 col-sm-12 offset-lg-7">
                        <div class="login_inner">
                            <h1 class="text-center">Forgot Password</h1>
                            <form>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="inputName4">Mobile No</label>
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-mobile" style="color:#f17117" aria-hidden="true"></i></div>
                                            </div>
                                            @Html.HiddenFor(m => m.UserAgent)
                                            @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control", @required = "", @placeholder = "Enter Mobile No.", @maxLength = "10", @onkeypress = "return isNumberKey(event);" })

                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" style="background-color: #ac173d !important" onclick="return Validateform();" class="btn btn-primary btn-lg btn-block bg-custom loginbt" tabindex="4">
                                        Forgot Password
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            @*<div id="app">
                    <section class="section">
                        <div class="container mt-5">
                            <div class="row">
                                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                                    <div class="card card-primary">
                                        <div class="card-header">
                                            <h4>Forgot Password</h4>
                                        </div>
                                        <div class="card-body">
                                            <p class="text-muted">We will send a link to reset your password</p>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>*@

        }
    </div>

    <!-- General JS Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="js/bootstrap.min.js"></script>
    <script>

        $(document).ready(function () {
            $("#divload").css({ 'display': 'none' });
            var userAgent = navigator.userAgent;

            $('#UserAgent').val(userAgent);
        });
        function isNumberKey(evt) {

            var charCode = (evt.which) ? evt.which : event.keyCode;
            if (charCode != 46 && charCode > 31
              && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }
        function Validateform() {
            $(".errortext").removeClass("errortext");
            if ($('#MobileNo').val() == '') {
                $("#MobileNo").addClass('errortext');
                $('#MobileNo').focus();
                return false;
            }
            return true;
        }

        $(document).ready(function () {
            $("input:text,form").attr("autocomplete", "off");
        })
    </script>

