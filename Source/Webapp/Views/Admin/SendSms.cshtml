@model Webapp.Models.Master

@{
    ViewBag.Title = "SendSms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SendSms", "Admin", FormMethod.Post, new { @class = "tr-form" }))
{
    <div class="loader"></div>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title m-b-0">Admin</h4>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/Admin/Index">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Send SMS</li>
                    </ul>
                    <div class="section-body">

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4>Send SMS</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label>To</label>
                                                    @Html.TextBoxFor(m => m.Device, new { @class = "form-control", @placeholder = "Enter Mobile No...", @id = "txtdevice",@required="true" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Mobile No. !
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>Date</label>
                                                    @Html.TextBoxFor(m => m.PublishDate, new { @class = "form-control datepicker", @required="true"  })
                                                    <div class="invalid-feedback">
                                                        Please Enter Date !
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Title</label>
                                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control"  })
                                                    <div class="invalid-feedback">
                                                        Please Enter Title !
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label>Description</label>
                                                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @required = "true" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Description !
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    @Html.AntiForgeryToken()
                                                    <button class="btn btn-primary mrse-1" style="margin-top: 29px" type="submit">Submit</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>
}
<script src="~/scripts/jquery-1.10.2.js"></script>


