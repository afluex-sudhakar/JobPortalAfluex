@model Data.DTOs.EnrollmentProgramDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EnrollmentProgram", "Admin", FormMethod.Post, new { @class = "needs-validation tr-form", @novalidate = "", @enctype = "multipart/form-data" }))
{
    <div class="loader"></div>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title m-b-0">Admin</h4>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/Admin/Index">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Enrollment Program</li>
                    </ul>
                    <div class="section-body">

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4>Enrollment Program</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>Title</label>
                                                    @Html.HiddenFor(m => m.Id)
                                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @required = "true" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Title !
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Title (In Hindi)</label>
                                                    @Html.TextBoxFor(m => m.TitleH, new { @class = "form-control hindi", @required = "true" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Title in Hindi !
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>Description</label>
                                                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @required = "true" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Description !
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Description (In Hindi)</label>
                                                    @Html.TextAreaFor(m => m.DescriptionH, new { @class = "form-control hindi", @required = "true" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Description in Hindi !
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>Starting Date</label>
                                                    @Html.TextBoxFor(m => m.DateStart, new { @class = "form-control", @type = "date", @required = "true" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Starting Date !
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Ending Date</label>
                                                    @Html.TextBoxFor(m => m.DateEnd, new { @class = "form-control", @type = "date", @required = "true" })
                                                    <div class="invalid-feedback">
                                                        Please Enter Ending Date !
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>Publish Date</label>
                                                    @Html.TextBoxFor(m => m.PublishDate, new { @class = "form-control", @type = "date" })
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Last Date</label>
                                                    @Html.TextBoxFor(m => m.LastDate, new { @class = "form-control", @type = "date" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <label>Upload Image</label>
                                                    <div class="custom-file">
                                                        <input type="file" class="form-control" name="postedImage" id="postedImage" />
                                                        <label class="custom-file-label" for="customFile">Choose file</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    @Html.AntiForgeryToken()
                                                    <button class="btn btn-primary mrse-1" style="margin-top: 29px" type="submit">Submit</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>
}
@section script {
    @if (TempData["msg"] == "Saved")
    {
        <script type="text/javascript">
            window.onload = function () {
                iziToast.success({
                    title: "Success!",
                    message: "Record Saved ",
                    position: "topRight",
                });
            };

        </script>
    }
    @if (TempData["msg"] == "Updated")
    {
        <script type="text/javascript">
            window.onload = function () {
                iziToast.success({
                    title: "Success!",
                    message: "Record Updated ",
                    position: "topRight",
                });
            };

        </script>
    }
}