@model Data.DTOs.JobDTOWeb

@{
    ViewBag.Title = "JobDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="loader"></div>
<div id="app">
    <div class="main-wrapper main-wrapper-1">
        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <ul class="breadcrumb breadcrumb-style ">
                    <li class="breadcrumb-item">
                        <h4 class="page-title m-b-0">Available Jobs</h4>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <i data-feather="home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Details</li>
                </ul>
                <div class="section-body">
                    <div class="row mt-sm-4">
                        <div class="col-12 col-md-12 col-lg-4">
                            <div class="card author-box">
                                <div class="card-body">
                                    <div class="author-box-center">
                                        @if (Model.Image != null && Model.Image != "")
                                        {
                                            <img alt="image" src="@Model.Image" class="rounded-circle author-box-picture">
                                        }
                                        else
                                        {
                                            <img alt="image" src="~/assets/img/users/user-1.png" class="rounded-circle author-box-picture">
                                        }
                                        <div class="clearfix"></div>
                                        <br />
                                        <div class="author-box-name">
                                            <a href="#">@Model.Title</a>
                                        </div>
                                        @*<div class="author-box-job">Web Developer</div>*@
                                    </div>
                                    @*<div class="text-center">
                                            <div class="mb-2 mt-3">
                                                <div class="text-small font-weight-bold">Follow On</div>
                                            </div>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-facebook">
                                                <i class="fas fa-facebook-f"></i>
                                            </a>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-twitter">
                                                <i class="fas fa-twitter"></i>
                                            </a>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-github">
                                                <i class="fas fa-github"></i>
                                            </a>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-instagram">
                                                <i class="fab fa-instagram"></i>
                                            </a>
                                            <div class="w-100 d-sm-none"></div>
                                        </div>*@
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4>Job Details</h4>
                                </div>
                                <div class="card-body">
                                    <div class="py-4">
                                        <p class="clearfix">
                                            <span class="float-left">Job Role</span>
                                            <span class="float-right text-muted">
                                                @Model.job.JobRole
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Job Type
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.job.JobType
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Category
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.job.Category
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Skills
                                            </span>
                                            <span class="float-right text-muted">
                                               @if (Model.job.Skill != null)
                                               {
                                                   for (int i = 0;i< Model.job.Skill.Count();i++)
                                                   {
                                                    <span class="jobdetails_publ">@Model.job.Skill[i]</span>
                                                   }
                                               }
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                City
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.job.City
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                              Salary
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.job.SalaryMin - @Model.job.SalaryMax
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Experience
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.job.ExperienceMin - @Model.job.ExperienceMax years
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-12 col-md-12 col-lg-8">
                            <div class="card">
                                <div class="padding-20">
                                    <ul class="nav nav-tabs" id="myTab2" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="home-tab2" data-toggle="tab" href="#about" role="tab"
                                               aria-selected="true">Job Description</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content tab-bordered" id="myTab3Content">
                                        <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="home-tab2">
                                            <div class="row">
                                                <div class="col-md-3 col-6 b-r">
                                                    <strong>Job Title</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.job.Title</p>
                                                </div>
                                            </div>
                                            <strong>Short Description</strong>
                                            <p class="m-t-30">
                                                @Model.job.ShortDescription
                                            </p>
                                            <div class="section-title">Description</div>
                                            <ul>
                                                <li>@Model.job.Description</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
