    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnRead").click(function () {
                location.href = "/en/CompanyList";
            });
            $("#btnregister").click(function () {
                location.href = "/en/SignUp";
            })
            $("#btnsearch").click(function () {
                debugger
                var city = $("#autocomplete").val();
                var key = $("#txtskill").val();
                if (city != "" && key != "") {
                    var url = "/en/AdvanceSearch?City=" + encodeURIComponent(city) + "&SearchTerm=" + encodeURIComponent(key);
                }
                else if (city != "") {
                    var url = "/en/AdvanceSearch?City=" + encodeURIComponent(city);
                }
                else if (key != "") {
                    var url = "/en/AdvanceSearch?SearchTerm=" + encodeURIComponent(key);
                }
                else {
                    url = "/en/AdvanceSearch";
                }
                window.location.href = url;
            });
            $("#resume").click(function () {
                debugger;
                var UserId = $("#hdfSession").val();
                if (UserId == "") {
                    window.location.href = "/en/Login";
                }
                else {
                    window.location.href = "/User/UserProfile";
                }
            });
            $("#btnsubmit").click(function () {
                debugger;
                if ($("#txtEmail").val() != '')
                {
                    $.ajax({
                        url: "/en/SubscribeNewsLetter",
                        type: "POST",
                        dataType: 'JSON',
                        contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                        data: { Email: $("#txtEmail").val() },
                        success: function (data) {
                            debugger
                            if (data == true) {
                                alert('Thank you for subscribing our News letter !');
                                $("#txtEmail").val("");
                            }
                            else {
                                alert('Email Id already exist. Please subscribe with another mail Id.');
                                $("#txtEmail").val("");
                            }
                        }
                    })
                }
                else
                {
                    alert('Please Enter Email Id.');
                }
            })
        })
    </script>
    <script>
        function SendLink() {
            if ($("#txtMobile").val() == '') {
                return;
            }
            var captcharesponse = grecaptcha.getResponse();
            var dataa = {
                Mobile: $("#txtMobile").val(),
                captcharesponse: captcharesponse
            };
            //console.log(captcharesponse)
            $.ajax({
                url: "/en/SendLinkToUser",
                type: "POST",
                dataType: 'JSON',
                contentType: 'application/json;',
                data: JSON.stringify(dataa),
                success: function (data) {
                    debugger
                    alert(data);
                    $("#txtMobile").val("");
                    grecaptcha.reset();
                }
            })
        }
    </script>
