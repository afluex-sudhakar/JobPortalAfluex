                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Key Skills</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body profile_form">
                                    <div class="form-row">
                                        <div class="form-group col-md-12">
                                            <label for="">Name</label>
                                            @Html.DropDownListFor(m => m.SkillId, new SelectList(ViewBag.Skill, "Id", "Name"), new { @class = "js-example-placeholder-multiple js-states form-control", multiple = "multiple", @onchange = "return skillChange();" })
