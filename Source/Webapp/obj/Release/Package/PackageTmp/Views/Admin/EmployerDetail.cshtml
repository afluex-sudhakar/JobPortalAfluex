@model Data.DTOs.EmployerDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="loader"></div>
<div id="app">
    <div class="main-wrapper main-wrapper-1">
        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <ul class="breadcrumb breadcrumb-style ">
                    <li class="breadcrumb-item">
                        <h4 class="page-title m-b-0">Admin</h4>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <i data-feather="home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Employer Detail</li>
                </ul>
                <div class="section-body">
                    <div class="row mt-sm-4">
                        <div class="col-12 col-md-12 col-lg-4">
                            <div class="card author-box">
                                <div class="card-body">
                                    <div class="author-box-center">
                                        @if (Model.Photo != null && Model.Photo != "")
                                        {
                                            <img alt="image" src="@Model.Photo" class="rounded-circle author-box-picture">
                                        }
                                        else
                                        {
                                            <img alt="image" src="~/assets/img/users/user-1.png" class="rounded-circle author-box-picture">
                                        }
                                        <div class="clearfix"></div>
                                        <br />
                                        <div class="author-box-name">
                                            <a href="#">@Model.FirstName @Model.LastName</a>
                                        </div>
                                        @*<div class="author-box-job">Web Developer</div>*@
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4>Personal Details</h4>
                                </div>
                                <div class="card-body">
                                    <div class="py-4">
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Phone
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.Mobile
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Email
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.Email
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                City
                                            </span>
                                            <span class="float-right text-muted">
                                                @if(Model.UserDetail.City !=null)
                                                {
                                                @Model.UserDetail.City.Name
                                                }
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Address
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.Address
                                            </span>
                                        </p>
                                        <p class="clearfix" style="display:none">
                                            <span class="float-right text-muted">
                                                @Model.Password
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-12 col-md-12 col-lg-8">
                            <div class="card">
                                <div class="padding-20">
                                    <ul class="nav nav-tabs" id="myTab2" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="home-tab2" data-toggle="tab" href="#about" role="tab"
                                               aria-selected="true">About</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content tab-bordered" id="myTab3Content">
                                        <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="home-tab2">
                                            <div class="row">
                                                <div class="col-md-4 col-6 b-r">
                                                    <strong>Company Name</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.CompanyName</p>
                                                </div>
                                                <div class="col-md-4 col-6 b-r">
                                                    <strong>Type of Company</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.CompanyType</p>
                                                </div>
                                                <div class="col-md-4 col-6 b-r">
                                                    <strong>No. of Employees</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.NoOfEmployees</p>
                                                </div>
                                            </div>
                                            <p class="m-t-30">
                                                @Model.About
                                            </p>
                                            <div class="row">
                                                <div class="col-md-3 col-6 b-r">
                                                    <strong>Aadhar</strong>
                                                    <br>
                                                    <a href="@Model.Aadhar" target="_blank"><img src="@Model.Aadhar" height="100" width="100" /></a>
                                                </div>
                                                <div class="col-md-3 col-6 b-r">
                                                    <strong>PAN Card</strong>
                                                    <br>
                                                    <a href="@Model.PAN" target="_blank"><img src="@Model.PAN" height="100" width="100" /></a>
                                                </div>
                                                <div class="col-md-3 col-6 b-r">
                                                    <strong>Company Certificate</strong>
                                                    <br>
                                                    <a href="@Model.CompanyCertificate" target="_blank"><img src="@Model.CompanyCertificate" height="100" width="100" /></a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
