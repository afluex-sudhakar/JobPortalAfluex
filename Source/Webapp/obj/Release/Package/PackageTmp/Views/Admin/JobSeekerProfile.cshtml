@model Data.DTOs.UserDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="loader"></div>
<div id="app">
    <div class="main-wrapper main-wrapper-1">
        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <ul class="breadcrumb breadcrumb-style ">
                    <li class="breadcrumb-item">
                        <h4 class="page-title m-b-0">Reports</h4>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Admin/Index">
                            <i data-feather="home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Job Seeker Profile</li>
                </ul>
                <div class="section-body">
                    <div class="row mt-sm-4">
                        <div class="col-12 col-md-12 col-lg-4">
                            <div class="card author-box">
                                <div class="card-body">
                                    <div class="author-box-center">
                                        @if (Model.Photo != null && Model.Photo != "")
                                        {
                                            <img alt="image" src="@Model.Photo" class="rounded-circle author-box-picture">
                                        }
                                        else
                                        {
                                            <img alt="image" src="~/assets/img/users/user-1.png" class="rounded-circle author-box-picture">
                                        }
                                        <div class="clearfix"></div>
                                        <br />
                                        <div class="author-box-name">
                                            <a href="#">@Model.FirstName @Model.LastName</a>
                                        </div>
                                        @*<div class="author-box-job">Web Developer</div>*@
                                    </div>
                                    @*<div class="text-center">
                                            <div class="mb-2 mt-3">
                                                <div class="text-small font-weight-bold">Follow On</div>
                                            </div>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-facebook">
                                                <i class="fas fa-facebook-f"></i>
                                            </a>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-twitter">
                                                <i class="fas fa-twitter"></i>
                                            </a>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-github">
                                                <i class="fas fa-github"></i>
                                            </a>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-instagram">
                                                <i class="fab fa-instagram"></i>
                                            </a>
                                            <div class="w-100 d-sm-none"></div>
                                        </div>*@
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4>Personal Details</h4>
                                </div>
                                <div class="card-body">
                                    <div class="py-4">
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Gender
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.Gender
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Father Name
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.FatherName
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Date of Birth
                                            </span>
                                            <span class="float-right text-muted">
                                                @if (Model.DOB != null)
                                                {
                                                    Model.DOB.Value.ToShortDateString();
                                                }
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Phone
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.Mobile
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Email
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.Email
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Address
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.Address
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-12 col-md-12 col-lg-8">
                            <div class="card">
                                <div class="padding-20">
                                    <ul class="nav nav-tabs" id="myTab2" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="home-tab2" data-toggle="tab" href="#about" role="tab"
                                               aria-selected="true">About</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content tab-bordered" id="myTab3Content">
                                        <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="home-tab2">
                                            <div class="row">
                                                <div class="col-md-3 col-6 b-r">
                                                    <strong>Full Name</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.FirstName @Model.LastName</p>
                                                </div>
                                                <div class="col-md-3 col-6 b-r">
                                                    <strong>Mobile</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.Mobile</p>
                                                </div>
                                                <div class="col-md-3 col-6 b-r">
                                                    <strong>Email</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.Email</p>
                                                </div>
                                                <div class="col-md-3 col-6">
                                                    <strong>Location</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.Address</p>
                                                </div>
                                            </div>
                                            <div class="section-title">Education Details</div>
                                            <div class="card-body">
                                                <table class="table">
                                                    <thead class="thead-dark">
                                                        <tr>
                                                            <th scope="col">S.No.</th>
                                                            <th scope="col">Qualiication</th>
                                                            <th scope="col">College Name</th>
                                                            <th scope="col">Passing Year</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (Model.ListEducation != null)
                                                        {
                                                            int i = 1;
                                                            foreach (var Item in Model.ListEducation)
                                                            {
                                                                <tr>
                                                                    <th scope="row">@i</th>
                                                                    <td>@Item.Course.Name</td>
                                                                    <td>@Item.CollegeName</td>
                                                                    <td>@Item.YearOfPassing</td>
                                                                </tr>
                                                                i++;
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="section-title">Experiences</div>
                                            <div class="card-body">
                                                <table class="table">
                                                    <thead class="thead-dark">
                                                        <tr>
                                                            <th scope="col">S.No.</th>
                                                            <th scope="col">Company Name</th>
                                                            <th scope="col">From Year</th>
                                                            <th scope="col">To Year</th>
                                                            <th scope="col">Designation</th>
                                                            <th scope="col">Description</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (Model.ListExperience != null)
                                                        {
                                                            int i = 1;
                                                            foreach (var Item in Model.ListExperience)
                                                            {
                                                                <tr>
                                                                    <th scope="row">@i</th>
                                                                    <td>@Item.CompanyName</td>
                                                                    <td>@Item.YearFrom</td>
                                                                    <td>@Item.YearTo</td>
                                                                    <td>@Item.Designation</td>
                                                                    <td>@Item.Description</td>
                                                                </tr>
                                                                i++;
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="section-title">Other Details</div>
                                            <ul>
                                                <li><strong>Skills</strong> -                                                     @if (Model.LstSkills != null)
                                                {
                                                    int i = 1;
                                                    foreach (var item in Model.LstSkills)
                                                    {
                                                        <span class="jobdetails_publ">@item.Skill.Name</span>

                                                        i++;
                                                    }
                                                }
</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
