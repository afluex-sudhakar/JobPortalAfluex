<body style="background-image: url('../images/login_bg.jpg');background-repeat: no-repeat;background-size: auto;">
    <div class="main_signup">
        @using (Html.BeginForm("SignUp", "Hi", FormMethod.Post, new { @class = "needs-validation", @novalidate = "" }))
        {
            if (TempData["msg"] != null)
            {
                <div>
                    @TempData["msg"]
                </div>
            }
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12">
                        <div class="signup_inner">
                            <h1 class="text-center">पंजीकरण</h1>
                            <form>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="inputName4">पहला नाम</label>
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></div>
                                            </div>
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "पहला नाम दर्ज करें", @required="true" })
                                            <div class="invalid-feedback">
                                                कृपया पहला नाम दर्ज करें !
                                            </div>
                                            @Html.HiddenFor(m => m.UserAgent)

                                            <input type="hidden" name="response" value="@TempData["Msg"]" id="Response" /> 
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="inputName4">उप नाम</label>
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></div>
                                            </div>
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "उपनाम दर्ज करें" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="inputEmail4">ईमेल आईडी</label>
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-envelope" aria-hidden="true"></i></div>
                                            </div>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "प्रासंगिक नौकरियां प्राप्त करने के लिए अपनी सक्रिय ईमेल आईडी दर्ज करें" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="inputEmail4">मोबाइल नंबर *</label>
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-phone" aria-hidden="true"></i></div>
                                            </div>
                                            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @maxLength = "10", @placeholder = "मान्य मोबाइल नंबर दर्ज करें", @onkeypress = "return isNumberKey(event);", @required = "true" })
                                            <div class="invalid-feedback">
                                                मोबाइल नंबर
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="inputEmail4">पासवर्ड बनाएं *</label>
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></div>
                                            </div>
                                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "न्यूनतम 8 वर्ण", @onBlur = "return checkPasswordStrength()", @type = "Password", @required = "true" })
                                            <div class="invalid-feedback">
                                                पासवर्ड !
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="inputEmail4">पासवर्ड की पुष्टि कीजिये *</label>
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></div>
                                            </div>
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "true" })
                                            <div class="invalid-feedback">
                                                कृपया पासवर्ड को फिर से दर्ज करें !
                                            </div>
                                        </div>
                                    </div>
                                </div>
                               
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-primary btn-lg signup_btn" onclick="return validateConfPassword();">पंजीकरण करें</button>
                                <button type="button" id="btnsignin" class="btn btn-outline-primary btn-lg signup_btn">साइन इन करें</button>
                                <button id="btnhome" type="button" class="btn btn-outline-primary btn-lg signup_btn float-lg-right">होम पे जाएँ</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }

