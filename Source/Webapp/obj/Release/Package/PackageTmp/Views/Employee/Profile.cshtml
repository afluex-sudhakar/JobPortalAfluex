@model Data.DTOs.EmployerDTO
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<div class="loader"></div>
<div id="app">
    <div class="main-wrapper main-wrapper-1">
        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <ul class="breadcrumb breadcrumb-style ">
                    <li class="breadcrumb-item">
                        <h4 class="page-title m-b-0">Employer</h4>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <i data-feather="home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Profile</li>
                </ul>
                <div class="section-body">
                    <div class="row mt-sm-4">
                        <div class="col-12 col-md-12 col-lg-4">
                            <div class="card author-box">
                                <div class="card-body">
                                    <div class="author-box-center">
                                        <img alt="image" src="~/assets/img/users/user-1.png" class="rounded-circle author-box-picture">
                                        <div class="clearfix"></div>
                                        <br />
                                        <div class="author-box-name">
                                            <a href="#">@Model.UserName</a>
                                        </div>
                                        @*<div class="author-box-job">Web Developer</div>*@
                                    </div>
                                    @*<div class="text-center">
                                            <div class="mb-2 mt-3">
                                                <div class="text-small font-weight-bold">Follow On</div>
                                            </div>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-facebook">
                                                <i class="fas fa-facebook-f"></i>
                                            </a>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-twitter">
                                                <i class="fas fa-twitter"></i>
                                            </a>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-github">
                                                <i class="fas fa-github"></i>
                                            </a>
                                            <a href="#" class="btn btn-social-icon mr-1 btn-instagram">
                                                <i class="fab fa-instagram"></i>
                                            </a>
                                            <div class="w-100 d-sm-none"></div>
                                        </div>*@
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4>Personal Details</h4>
                                </div>
                                <div class="card-body">
                                    <div class="py-4">
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Company Name
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.CompanyName
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Phone
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.Mobile
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Email
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.Email
                                            </span>
                                        </p>
                                        <p class="clearfix">
                                            <span class="float-left">
                                                City
                                            </span>
                                                <span class="float-right text-muted">
                                                   @Model.City
                                                </span>
                                        </p>
                                        @*<p class="clearfix">
                                            <span class="float-left">
                                                State
                                            </span>
                                            
                                           
                                        </p>*@
                                        <p class="clearfix">
                                            <span class="float-left">
                                                Address
                                            </span>
                                            <span class="float-right text-muted">
                                                @Model.Address
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-12 col-md-12 col-lg-8">
                            <div class="card">
                                <div class="padding-20">
                                    <ul class="nav nav-tabs" id="myTab2" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="home-tab2" data-toggle="tab" href="#about" role="tab"
                                               aria-selected="true">About</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" id="profile-tab2" data-toggle="tab" href="#settings" role="tab"
                                               aria-selected="false">Edit</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content tab-bordered" id="myTab3Content">
                                        <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="home-tab2">
                                            <div class="row">
                                                <div class="col-md-3 col-6 b-r">
                                                    <strong>Full Name</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.FirstName @Model.LastName</p>
                                                </div>
                                                <div class="col-md-3 col-6 b-r">
                                                    <strong>Mobile</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.Mobile</p>
                                                </div>
                                                <div class="col-md-3 col-6 b-r">
                                                    <strong>Email</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.Email</p>
                                                </div>
                                                <div class="col-md-3 col-6">
                                                    <strong>Location</strong>
                                                    <br>
                                                    <p class="text-muted">@Model.Address</p>
                                                </div>
                                            </div>
                                            <p class="m-t-30">
                                                @Model.About
                                            </p>
                                            <p style="display:none">@Model.Id</p>
                                            @*<div class="section-title">Work Details</div>
                                            <ul>
                                                <li>NA</li>
                                            </ul>*@
                                        </div>

                                        <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="profile-tab2">
                                            @using (Html.BeginForm("Profile", "Employee", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                            {
                                                <form method="post" class="needs-validation">
                                                    <div class="card-header">
                                                        <h4>Edit Profile</h4>
                                                    </div>

                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="form-group col-md-6 col-12">
                                                                <label>First Name</label>
                                                                @Html.HiddenFor(m => m.Id)
                                                                @Html.TextBoxFor(m=>m.FirstName, new { @class= "form-control" })
                                                                @*<input type="text" class="form-control" value="@Model.FirstName">*@
                                                                <div class="invalid-feedback">
                                                                    Please fill in the first name
                                                                </div>
                                                            </div>
                                                            <div class="form-group col-md-6 col-12">
                                                                <label>Last Name</label>
                                                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                                                @*<input type="text" class="form-control" value="@Model.LastName">*@
                                                                <div class="invalid-feedback">
                                                                    Please fill in the last name
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="form-group col-md-7 col-12">
                                                                <label>Email</label>
                                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type="email" })
                                                                @*<input type="email" class="form-control" value="@Model.Email">*@
                                                                <div class="invalid-feedback">
                                                                    Please fill in the email
                                                                </div>
                                                            </div>
                                                            <div class="form-group col-md-5 col-12">
                                                                <label>Phone</label>
                                                                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
                                                                @*<input type="tel" class="form-control" value="@Model.Mobile">*@
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="form-group col-12">
                                                                <label>Bio</label>
                                                                @Html.TextAreaFor(m => m.About, new { @class = "form-control summernote-simple" })
                                                                @*<textarea class="form-control summernote-simple">
                                                                    @Model.About
                                                                </textarea>*@
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="form-group mb-0 col-12">
                                                                <div class="custom-control custom-checkbox">
                                                                    <input type="checkbox" name="remember" class="custom-control-input" id="newsletter">
                                                                    <label class="custom-control-label" for="newsletter">Subscribe to newsletter</label>
                                                                    <div class="text-muted form-text">
                                                                        You will get new information about products, offers and promotions
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="card-footer text-right">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                                    </div>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
